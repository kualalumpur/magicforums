<div class="topics">
  <!-- topics page html in here -->
  <div class="flex-child text-center">
    <h1>Topics</h1>
    <%= link_to 'Add New Topic', new_topic_path, :class => 'btn btn-success btn-lg' %>
  </div>

  <div class="flex-parent text-center">

    <% @topics.each do |topic| %>
      <div class="flex-child">
        <h3><%= link_to topic.title, topic_posts_path(topic) %></h3>
        <h4><%= topic.description %></h4>
        <%= link_to edit_topic_path(topic) do %>
        <%= fa_icon 'edit 2x', class: 'btn btn-success btn-lg' %>
        <% end %>
        <%= link_to topic_path(topic), method: :delete, data: { confirm: "Delete?" } do %>
        <%= fa_icon 'trash 2x', class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    <% end %>
  </div>

</div>
