<div class="users">
  <div class="flex-parent text-center">
      <div class="flex-child">
<%= form_for(@user, url: users_path, html: { id: "user-create-form" }) do |f| %>
  <h1 class="text-center">
    Register an Account
  </h1>

  <div class="form-group">
    <h4> <%= f.label :email_field, "Email" %> </h4>
    <%= f.text_field :email, required: true, id: "user_email_field", class: 'form-control' %>

    <h4> <%= f.label :username_field, "Username" %> </h4>
    <%= f.text_field :username, required: true, id: "user_username_field", class: 'form-control' %>

    <h4> <%= f.label :password_field, "Password" %> </h4>
    <%= f.text_field :password, required: true, id: "user_password_field", class: 'form-control' %>

    <h4> Profile Image </h4>
    <%= f.file_field :image, id: "user_image_field", class: 'form-control image-uploader' %>
  </div>
  <div class="form-group">
    <%= f.submit "Sign Up", class: "btn btn-success btn-lg" %>
  </div>

<% end %>
    </div>
  </div>
</div>
