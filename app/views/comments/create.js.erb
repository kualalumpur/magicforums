$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

  <% if @comment.persisted? %>
    $('#comments').prepend("<div class='flex-child'><%=j render partial: 'comments/comment', locals: { comment: @comment, post: @comment.post } %></div>")
    $('#comments-form-container').html("<%=j render partial: 'comments/form', locals: { comment: @new_comment, post: @post } %>")
  <% end %>
