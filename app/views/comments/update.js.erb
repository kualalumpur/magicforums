$('#flash-messages-container').html("<%=j render partial: 'partials/flash_messages' %>")

<% if @comment.persisted? %>
  $('.comment[data-id=<%=@comment.id%>]').replaceWith("<%=j render partial: 'comments/comment', locals: { comment: @comment, post: @post, topic: @topic, extra_class: '' } %>")
<% end %>
