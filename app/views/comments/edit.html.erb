<div class="comments">
  <div class="flex-parent text-center">
      <div class="flex-child">

<%= form_for(@comment, url: topic_post_comment_path(@topic, @post, @comment), html: { id: "comment-update-form" }) do |f| %>
  <h1 class="text-center">
    Edit Comment
  </h1>

  <div class="form-group">
    <h4> <%= f.label :body_field, "Body" %> </h4>
    <%= f.text_field :body, required: true, id: "comment_body_field", class: 'form-control' %>
  </div>


  <div class="form-group text-center">
    <%= f.submit "Update Comment", class: "btn btn-success btn-lg" %>
  </div>
<% end %>

    </div>
  </div>
</div>
